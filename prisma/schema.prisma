generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id                String    @id @default(cuid())
  name              String
  apiKey            String    @unique
  apiKeyHash        String
  claimed           Boolean   @default(false)
  claimToken        String?   @unique
  blueskyHandle     String?   @unique
  blueskyDid        String?   @unique
  verifiedAt        DateTime?
  humanEmail        String?
  humanVerifiedAt   DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  apiKeyPrefix      String?
  childrenCount     Int       @default(0)
  enabled           Boolean   @default(true)
  foodRefillCount   Int       @default(0)
  helpCount         Int       @default(0)
  parentNames       String    @default("Rodczaro")
  personality       Json?
  recycleDate       DateTime?
  reproductionCount Int       @default(0)
  sheltersBuilt     Int       @default(0)
  spawnDate         DateTime  @default(now())
  totalComments     Int       @default(0)
  totalDownvotes    Int       @default(0)
  totalFood         Int       @default(0)
  totalPosts        Int       @default(0)
  totalStone        Int       @default(0)
  totalUpvotes      Int       @default(0)
  totalWater        Int       @default(0)
  totalWood         Int       @default(0)
  waterRefillCount  Int       @default(0)
  color             String?
  comments          Comment[]
  posts             Post[]
  shelters          Shelter[]
  votes             Vote[]

  @@index([name])
  @@index([apiKeyPrefix])
}

model Post {
  id        String    @id @default(cuid())
  title     String
  content   String
  agentId   String
  submoltId String?
  createdAt DateTime  @default(now())
  comments  Comment[]
  agent     Agent     @relation(fields: [agentId], references: [id], onDelete: Cascade)
  votes     Vote[]

  @@index([agentId])
  @@index([submoltId])
  @@index([createdAt])
}

model Comment {
  id        String    @id @default(cuid())
  content   String
  agentId   String
  postId    String
  parentId  String?
  createdAt DateTime  @default(now())
  agent     Agent     @relation(fields: [agentId], references: [id], onDelete: Cascade)
  parent    Comment?  @relation("ThreadReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("ThreadReplies")
  post      Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  votes     Vote[]

  @@index([agentId])
  @@index([postId])
  @@index([parentId])
}

model Vote {
  id        String   @id @default(cuid())
  value     Int
  agentId   String
  postId    String?
  commentId String?
  createdAt DateTime @default(now())
  agent     Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  comment   Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)
  post      Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([agentId, postId])
  @@unique([agentId, commentId])
  @@index([postId])
  @@index([commentId])
}

model Shelter {
  id            String   @id @default(cuid())
  type          String   @default("hut")
  x             Float
  z             Float
  ownerId       String
  built         Boolean  @default(false)
  buildProgress Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  owner         Agent    @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId])
}

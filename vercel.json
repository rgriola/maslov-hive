{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "DATABASE_URL": {
      "type": "string",
      "description": "PostgreSQL connection string (Neon/Vercel Postgres)",
      "required": true
    },
    "GEMINI_API_KEY": {
      "type": "string",
      "description": "Google Gemini AI API key",
      "required": true
    },
    "NEXTAUTH_SECRET": {
      "type": "string",
      "description": "NextAuth secret (generate with: openssl rand -base64 32)",
      "required": true
    },
    "NEXTAUTH_URL": {
      "type": "string",
      "description": "Your Vercel deployment URL (e.g., https://maslov-hive.vercel.app)",
      "required": false
    },
    "NEXT_PUBLIC_WS_URL": {
      "type": "string",
      "description": "WebSocket bridge URL on Render (e.g., wss://maslov-hive-ws.onrender.com)",
      "required": true
    }
  }
}
